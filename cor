#!/usr/bin/env bash                                                    

negritopreto='\033[1;30m' 
negritovermelho='\033[1;31m' 
negritoverde='\033[1;32m' 
negritoamarelo='\033[1;33m' 
negritoazul='\033[1;34m' 
negritomagenta='\033[1;35m' 
negritociano='\033[1;36m' 
negritolaranja='\033[1;37m' 

preto='\033[0;30m' 
vermelho='\033[0;31m' 
verde='\033[0;32m' 
amarelo='\033[0;33m' 
azul='\033[0;34m' 
magenta='\033[0;35m' 
ciano='\033[0;36m' 
laranja='\033[0;37m' 

fim='\033[0m'
echo "------------------------"
echo -e "${negritoazul}Forma de utilizar cores:${fim}"
echo "------------------------"
echo -e "${negritopreto}negritopreto${fim}"
echo -e "${negritovermelho}negritovermelho${fim}"
echo -e "${negritoverde}negritoverde${fim}"
echo -e "${negritoamarelo}negritoamarelo${fim}"
echo -e "${negritoazul}negritoazul${fim}"
echo -e "${negritomagenta}negritomagenta${fim}"
echo -e "${negritociano}negritociano${fim}"
echo -e "${negritolaranja}negritobranco${fim}"
echo -e "${preto}preto${fim}"
echo -e "${vermelho}vermelho${fim}"
echo -e "${verde}verde${fim}"
echo -e "${amarelo}amarelo${fim}"
echo -e "${azul}azul${fim}"
echo -e "${magenta}magenta${fim}"
echo -e "${ciano}ciano${fim}"
echo -e "${laranja}branco${fim}"

